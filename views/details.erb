<h4>Post details</h4>
<br/>
	<p>
		<%= @row['content'] %>
		<br/>
		<br/>
		Added at <%= @row['updated_at'] %>
	</p>
	<hr/>
<h4>Comments</h4>
<% @Comments.each do |comment| %>
	<p>
		<%= comment['content']%>
		<br/>
		<span style="font-size: 75%">Added at <%= comment['updated_at']%></span>
		<hr/>
	</p>
<% end %>
<p>
  <form action="/details/<%= @row['id'] %>" method="POST" role="form">
       <textarea name="comments[content]" class="form-control" rows="6" placeholder="Type comment text here" style = "width: 900px"></textarea> 
       <br/>
       <button type="submit" class="btn btn-primary">Add comment</button>
  </form>
</p>
